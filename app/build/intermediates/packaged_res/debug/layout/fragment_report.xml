<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ReportFragment">

    <ImageView
        android:id="@+id/blurImg"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/blur"/>

    <LinearLayout
        android:id="@+id/rootView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="Report Dashboard"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            tools:ignore="RtlCompat" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/reportImg"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:padding="10dp"
                android:src="@drawable/averageactivity" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/downloadBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/primaryLightColor"
            android:padding="10dp"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/export"
            android:drawableTint="@color/primaryDarkColor"
            android:text="Export Report"
            android:textSize="12sp" />

    </LinearLayout>


</FrameLayout>